!!!
%html
  %head
    %meta{charset: "utf-8"}
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{name: 'viewport', content:'width=device-width, user-scalable=no'}/
    %meta{:content => "default-src 'self' data: gap: https://ssl.gstatic.com 'unsafe-eval'; connect-src 'self' https://gooniyandi.herokuapp.com; style-src 'self' 'unsafe-inline'; media-src *; img-src 'self' https://s3.amazonaws.com/;", "http-equiv" => "Content-Security-Policy"}
    %title= "Gooniyandi App"
    = stylesheet_link_tag :all
    = javascript_include_tag "lib"
    = javascript_include_tag "all"
    %script{src: 'cordova.js', type: 'text/javascript'}
    = angular_include_templates
  %body{class: page_classes, detect: {os: ''}}
    = yield