.page.letter-page
  .row
    .columns.small-12.large-5.small-centered
      %h2.text-center{ng: {if: 'entries.length === 0'}}
        No entries

      %ul.small-block-grid-1.entries{:keep_scroll_pos => true}
        %li{ng: {repeat: 'entry in entries track by entry.id'}}
          %a{ng: {href: "#/entries/{{entry.id}}"}, id: "entry-{{entry.id}}"}
            = partial 'partials/list_entry'
